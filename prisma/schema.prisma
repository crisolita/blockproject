generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  id       Int  @id @default(autoincrement())
  User_id   Int
  nftId    Int
  price    Int
  cantidad Int
  active Boolean?
  txHash String?
  User   User   @relation(fields: [User_id], references: [id])
  Nfts     Nfts @relation(fields: [nftId], references: [id])
}

model Nfts {
  User_id   Int?
  id        Int      @id @unique
  nombre    String
  cantidad  Int
  royalty   Int
  imageIpfs String
  User      User?    @relation(fields: [User_id], references: [id])
  Orders    orders[]
}

model User {
  id         Int     @id @default(autoincrement())
  fullName   String
  balance    Int?
  email      String? @unique
  password   String?
  wallet     String?
  authToken  String?
  typeOfUser String
  key        String?
  Nfts       Nfts[]
  Orders     orders[]
}
